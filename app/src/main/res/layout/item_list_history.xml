<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/item_list_history_CV"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="270dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/basic"
    android:layout_margin="20dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginRight="10dp"
            android:gravity="right">

            <ImageView
                android:id="@+id/iv_delete_history"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_close_white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/item_list_iv_content_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Handoyo Dwi Prasetyo handoyo Dwi Prasetyohandoyo Dwi Prasetyohandoyo Dwi Prasetyohandoyo Dwi Prasetyohandoyo Dwi Prasetyo"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">


            <TextView
                android:id="@+id/item_list_iv_author_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Handoyo"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>